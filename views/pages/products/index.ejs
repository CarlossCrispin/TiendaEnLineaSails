<div id="index" v-cloak>
    <div class="container mt-5">
        <a class="btn btn-success float-right mb-5" href="/new-product">New</a>

        <table class="table table-dark table-striped mt-5">
            <thead class="">
                <tr>
                    <th scope="col">Producto</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Stock</th>
                    <th scope="col" colspan="2">Acciones</th>
                </tr>
            </thead>

            <tbody>
                <% for (var i = 0; i < data.length; i++) { %>
                    <tr>
                        <td>
                            <img class="img-fluid img-round mx-auto" src="<%= data[i].imgURL %>" alt="<%= data[i].name %>" />
                        </td>
                        <td>
                            <%= data[i].id %>
                        </td>
                        <td>
                            <%= data[i].name %>
                        </td>
                        <td>$
                            <%= data[i].price %>
                        </td>
                        <td>
                            <%= data[i].description %>
                        </td>
                        <td>
                            <%= data[i].stock %>
                        </td>
                        <td>
                            <a class="btn btn-info" href="/edit-product/<%= data[i].id %>">
                                <i class="fa fa-edit text-light"></i>
                            </a>
                        </td>
                        <td>
                            <form action="/delete-product/<%= data[i].id %>" method="post">
                                <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                                <button class="btn btn-danger" type="submit"onclick="return confirm('Are you sure?')">
                <i class="fa fa-trash text-light"></i>
              </button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

    {{ data }}
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */
exposeLocalsToBrowser() %>

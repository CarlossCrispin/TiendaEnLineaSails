<div id="homepage" v-cloak>
    <div class="header">
        <div>
            <h1 class="display-4 text-info text-center">La Floreria</h1>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid bg-dark text-light">
        <h1 class="display-4">Productos</h1>
        <div class="col-sm-8 col-md-6 col-lg-4">
            <hr class="m-4 bg-light px-5" />
        </div>
    </div>
    <div class="container shadow marco p-5 bg-light">
        <div class="row">
            <% for (var i = 0; i < data.length; i++) { %>
                <div class="card mb-3 col-md-6 col-sm-12 shadow bg-dark text-light">
                    <div class="row g-5">
                        <div class="col-4 align-self-center">
                            <img class="img-fluid" src="<%= data[i].imgURL %>" alt="<%= data[i].name %>" />
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= data[i].name %>
                                </h5>
                                <hr />
                                <p class="card-text">
                                    <%= data[i].description %>.</p>
                                <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
                                <h2 class="display-4">$
                                    <%= data[i].price %>
                                </h2>
                            </div>
                            <button class="btn btn-primary btn-block" type="button">
              <span>
                <i class="fa fa-cart-plus fa-2x"></i>
              </span>
              Comprar
            </button>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                      <i class="fa fa-close"></i>
                    </button>
                </div>
                <div class="modal-body">...</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Close
          </button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
